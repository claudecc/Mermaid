source 'https://github.com/CocoaPods/Specs.git'

platform:ios,'11.0'

use_frameworks!

target 'Mermaid' do
  
  # Map
  pod 'BaiduMapKit', '~> 5.4.0'
  # layout
  pod 'SnapKit', '~> 5.0.1'
  # network
  pod 'Alamofire', '~> 5.2.2'
  pod 'Moya', '~> 14.0.0'
  # image
  pod 'Kingfisher', '~> 5.15.0'
  # json -> dict
  pod 'SwiftyJSON', '~> 5.0.0'
  # json -> model
  pod 'ObjectMapper', '~> 4.2.0'
  pod 'HandyJSON', '~> 5.0.2'
  
  pod 'RxSwift', '~> 5.1.1'
  pod 'RxCocoa', '~> 5.1.1'
  # RxDataSources, RxRelay
  pod 'RxDataSources', '~> 4.0.1'
  pod 'DifferenceKit'
  # refresh
  pod 'PullToRefresher', '~> 3.3'
  # storage
  pod 'SQLite.swift', '~> 0.12.2'
  pod 'RealmSwift', '~> 10.10.0'

  pod 'R.swift', '~> 5.2.2'

  # facebook动画效果
  pod 'Shimmer'

  pod 'WebViewJavascriptBridge'

  pod 'Bugly'
  
  # Echo是一款客户端的桌面端调试工具
  # pod 'EchoSDK', :configurations => ["Debug"]
  
  # AirBnb的日历, 2021.7.22, 764KB
  pod 'HorizonCalendar', '~> 1.8.7'
  
  # 7k 日历, 2019.12.9, 888KB
  pod 'JTAppleCalendar', '~> 8.0.3'
  
  # 1.9k 2021.6.26, 1MB
  pod 'CalendarKit', '~> 1.0.11'
  
  # 3.4k 2020.3.28, 920KB
  pod 'CVCalendar', '~> 1.7.0'
  
end
